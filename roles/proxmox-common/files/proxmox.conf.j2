ssl_certificate {{ pem_file }};
ssl_certificate_key {{ key_file }};

server {
    listen 80 default_server;
    return 301 https://\$host\$1;
}

server {
    listen 443 ssl;
    server_name _;

    proxy_buffering off;
    proxy_redirect off;
    client_max_body_size 0;
    proxy_connect_timeout  3600s;
    proxy_read_timeout  3600s;
    proxy_send_timeout  3600s;
    send_timeout  3600s;
}
